<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="@color/violet"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/green"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:background="@color/green">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/tick"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="131dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/tick1" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tick"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="52dp"
            android:gravity="center_horizontal"
            android:text="Paid succesfully at 01:18 PM on 31 oct 2021"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="1dp"
            android:text="T31102050164157060352710246"
            android:textColor="@color/yellow"
            android:textSize="15dp" />

        <Button
            android:id="@+id/paidvd"
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:layout_below="@+id/tick"
            android:layout_alignParentStart="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/cstoum_button"
            android:text="VIEW DETAILS" />

        <Button
            android:id="@+id/button7"
            android:layout_width="125dp"
            android:layout_height="32dp"
            android:layout_below="@+id/tick"
            android:layout_marginStart="14dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/paidvd"
            android:background="@drawable/cstoum_button"
            android:text="RESEND SMS" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/newlayouta"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/green"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/bview">


        <TextView
            android:id="@+id/paidnewname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/chouse1"
            android:text="Laxmi kiranam"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paidnewamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paidnewname"
            android:layout_marginStart="1dp"
            android:layout_marginTop="-5dp"
            android:layout_toEndOf="@+id/chouse1"
            android:text="â‚¹50"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="22dp"
            android:layout_toEndOf="@+id/imageView3"
            android:text="Add to favourites for quick access"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/chouse1"
            android:layout_width="102dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/ic_image"
            android:backgroundTint="@color/green" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="42dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/paidnew_hart" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="400dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/done" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/imageView6"
        android:layout_below="@+id/newlayouta"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/paidnew_ad" />


</RelativeLayout>